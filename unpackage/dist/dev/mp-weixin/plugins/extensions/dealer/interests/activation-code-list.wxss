.app {
  width: 100%;
  height: 100%;
  background-color: #f7f7f7;
}
.container {
  color: #333333;
}
.container .tabs,
.container .list {
  background-color: #ffffff;
}
.container .tabs {
  margin-bottom: 20rpx;
}
.container .tabs .tab {
  height: 100rpx;
  border-right: 1rpx solid #f2f2f2;
}
.container .tabs .tab .text {
  position: relative;
}
.container .tabs .tab:last-child {
  border-right: 0;
}
.container .list {
  padding: 0 30rpx;
}
.container .list .item {
  height: 100rpx;
  border-bottom: 1rpx solid #f2f2f2;
}
.container .list .item:last-child {
  border-bottom: 0;
}
.container .btn {
  width: 152rpx;
  height: 48rpx;
  border-radius: 24rpx;
  font-size: 9pt;
  line-height: 48rpx;
  text-align: center;
  color: #ffffff;
}
.container .btn.click {
  background-color: #bc0100;
}
.container .btn.use {
  background-color: #999999;
}

